<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_changotherinfo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/MyCustomToolBarStyle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/img_head_s"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageView6"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/radiogroup_change_identity"
            android:layout_alignStart="@+id/radiogroup_change_identity" />
        <TextView
            android:text="点击左侧更改头像"
            android:textColor="#cccccc"
            android:textSize="16sp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="59dp" />

        <EditText
            android:textColor="#999999"
            android:textSize="16sp"
            android:hint="用户名"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_change_username"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/edit_change_name"
            android:layout_alignLeft="@+id/edit_change_name"
            android:layout_alignStart="@+id/edit_change_name" />
        <EditText
            android:textColor="#4d4d4d"
            android:textSize="16sp"
            android:hint="真实名"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_change_name"
            android:layout_above="@+id/edit_change_info"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginBottom="30dp" />
        <EditText
            android:textColor="#999999"
            android:textSize="16sp"
            android:hint="个人介绍"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_change_info"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/edit_change_sercet"
            android:layout_alignLeft="@+id/edit_change_name"
            android:layout_alignStart="@+id/edit_change_name" />
        <EditText
            android:textColor="#999999"
            android:textSize="16sp"
            android:hint="密码"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_change_sercet"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/radiogroup_change_identity"
            android:layout_alignLeft="@+id/edit_change_info"
            android:layout_alignStart="@+id/edit_change_info" />


        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/radiogroup_change_identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_post_newotherinfo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp">

            <RadioButton
                android:layout_weight="0.35"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:id="@+id/radio_change_female"
                android:textColor="#999999"
                android:text="女"
                android:textSize="18sp"/>

            <RadioButton
                android:layout_weight="0.5"
                android:id="@+id/radio_change_male"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="男"
                android:textColor="#999999"
                android:textSize="18sp" />
        </RadioGroup>
        <Button
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="保存"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:id="@+id/button_post_newotherinfo"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/edit_change_sercet"
            android:layout_alignStart="@+id/edit_change_sercet" />
    </RelativeLayout>


</LinearLayout>