<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clazz_item"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:foreground="@drawable/card_foreground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/imageview_item_clazz"
            android:padding="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_item_clazzname"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="信息管理实验班"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/imageview_item_clazz"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_item_couresename"
            android:layout_toRightOf="@id/imageview_item_clazz"
            android:layout_below="@id/textview_item_clazzname"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_item_owner"
            android:layout_toRightOf="@id/imageview_item_clazz"
            android:layout_below="@id/textview_item_couresename"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_item_asid"
            android:layout_toRightOf="@id/textview_item_owner"
            android:layout_alignBaseline="@id/textview_item_owner"
            android:layout_marginLeft="140dp"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/owner"
            android:id="@+id/image_item_owner"
            android:layout_toRightOf="@id/textview_item_asid"
            android:layout_alignBottom="@id/textview_item_asid"
            android:layout_alignRight="@id/textview_item_clazzname"
            android:layout_marginBottom="4dp"
            android:visibility="gone"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>