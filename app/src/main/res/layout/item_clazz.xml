<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clazz_item"
    android:layout_height="72dp"
    android:layout_width="360dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:foreground="@drawable/card_foreground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview_item_clazz"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/textview_item_couresename"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageview_item_clazz"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="信息管理实验班"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textview_item_asid"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:gravity="center_vertical"
            android:text="CID: 123"
            android:textColor="#4d4d4d"
            android:textSize="14sp"
            android:layout_below="@+id/textview_item_couresename"
            android:layout_toRightOf="@+id/textview_item_owner"
            android:layout_toEndOf="@+id/textview_item_owner" />

        <TextView
            android:id="@+id/textview_item_zongfen"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/textview_item_asid"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/textview_item_asid"
            android:layout_toRightOf="@+id/textview_item_asid"
            android:gravity="center_vertical"
            android:text="每门课15分"
            android:textColor="#4d4d4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_item_owner"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/textview_item_couresename"
            android:layout_alignStart="@+id/textview_item_couresename"
            android:layout_below="@+id/textview_item_couresename"
            android:gravity="center_vertical"
            android:text="JID:63"
            android:textColor="#4d4d4d"
            android:textSize="14sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>