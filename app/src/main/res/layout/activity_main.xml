<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--<android.support.design.widget.NavigationView-->
    <!--android:id="@+id/nav_view"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="start"-->
    <!--android:fitsSystemWindows="true"-->
    <!--app:headerLayout="@layout/nav_header_main"-->
    <!--app:menu="@menu/activity_main_drawer"/>-->
    <LinearLayout
        android:id="@+id/line_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="start">

        <include
            android:id="@+id/nav_main"
            layout="@layout/nav_header_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--<include-->
            <!--android:id="@+id/nav_hmenu"-->
            <!--layout="@layout/nav_menu"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_weight="3"-->
            <!--android:layout_height="0dp"-->
            <!--/>-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_class"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/ic_class" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="70dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="46dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:gravity="center_vertical"
                    android:text="我的班级" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_message"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:text="我的消息"
                    android:gravity="center_vertical"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginStart="46dp"
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_info"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:text="我的信息"
                    android:gravity="center_vertical"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"
                    android:id="@+id/textView5"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"/>
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_about"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/about"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:text="关于"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_setting"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:text="设置"
                    android:id="@+id/textView6" />
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/drawer_login"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_exit" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:text="退出登录" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
